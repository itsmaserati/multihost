# Database
DATABASE_URL="postgresql://postgres:password@localhost:5432/pterodactyl_cp?schema=public"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT Secrets (generate with: openssl rand -hex 32)
JWT_ACCESS_SECRET="your-jwt-access-secret-here"
JWT_REFRESH_SECRET="your-jwt-refresh-secret-here"
JWT_ACCESS_EXPIRES_IN="15m"
JWT_REFRESH_EXPIRES_IN="7d"

# Encryption (generate with: openssl rand -hex 32)
ENCRYPTION_KEY="your-encryption-key-here"

# Pterodactyl Integration
PTERODACTYL_URL="https://panel.example.com"
PTERODACTYL_API_KEY="your-pterodactyl-application-api-key"

# Application
NODE_ENV="development"
PORT=3000
API_PREFIX="api"
CORS_ORIGIN="http://localhost:3001,https://cp.example.com"

# Security
RATE_LIMIT_TTL=60000
RATE_LIMIT_LIMIT=100
BCRYPT_ROUNDS=12

# WebSocket
WS_PORT=3001

# Agent Communication
AGENT_TOKEN_SECRET="your-agent-token-secret"
AGENT_TLS_CERT_PATH="/opt/certs/agent.crt"
AGENT_TLS_KEY_PATH="/opt/certs/agent.key"

# Email (for notifications - optional)
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
SMTP_FROM="noreply@example.com"

# Monitoring
LOG_LEVEL="info"
ENABLE_SWAGGER=true

# Quotas (defaults)
DEFAULT_MAX_NODES=5
DEFAULT_MAX_SERVERS=10
DEFAULT_MAX_USERS=50
DEFAULT_STORAGE_GB=100
DEFAULT_MEMORY_MB=4096
DEFAULT_CPU_CORES=2