# Database Configuration
POSTGRES_DB=pterodactyl_cp
POSTGRES_USER=postgres
POSTGRES_PASSWORD=changeme_secure_password

# Redis Configuration
REDIS_PASSWORD=changeme_redis_password

# JWT Secrets (generate with: openssl rand -hex 32)
JWT_ACCESS_SECRET=changeme_jwt_access_secret
JWT_REFRESH_SECRET=changeme_jwt_refresh_secret

# Encryption Key (generate with: openssl rand -hex 32)
ENCRYPTION_KEY=changeme_encryption_key

# Pterodactyl Integration
PTERODACTYL_URL=https://panel.example.com
PTERODACTYL_API_KEY=changeme_pterodactyl_api_key

# Application URLs
NEXT_PUBLIC_API_URL=https://cp.example.com
NEXT_PUBLIC_WS_URL=wss://cp.example.com
CORS_ORIGIN=https://cp.example.com

# SSL/TLS Configuration
CONTROL_PLANE_DOMAIN=cp.example.com
PANEL_DOMAIN=panel.example.com
SSL_EMAIL=admin@example.com

# Optional: External Database (if not using Docker PostgreSQL)
# DATABASE_URL=postgresql://user:pass@external-host:5432/dbname

# Optional: External Redis (if not using Docker Redis)
# REDIS_URL=redis://user:pass@external-host:6379